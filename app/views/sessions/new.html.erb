<h1>Log-in for Alpha-blog</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f|%>
    <p>
        <%= f.label :email%><br />
        <%= f.email_field :email, placeholder: "Enter you E-mail Address"%>
    </p>
    <p>
        <%= f.label :password%><br />
        <%= f.password_field :password, placeholder: "Enter your password!"%>
    </p>
    <p>
        <%= f.submit "Log-in" %>
    </p>

    <%= link_to "Return to Articles List", articles_path %>
<%end%>