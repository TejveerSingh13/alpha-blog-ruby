<h1>Alpha Bloggers</h1>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Articles</th>
            <th>Email</th>
            <th>Image</th>
            <th colspan = "3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user|%>
        <tr>
            <td><%= link_to user.username, user%></td>
            <td><%= pluralize(user.articles.count, "article") %></td>
            <td><%= user.email %></td>
            <td><%= gravatar_for user %></td>
            <td><%= link_to "View Profile", user %></td> 
            <% if logged_in? && (user == current_user || current_user.admin?) %>
                <td><%= link_to "Edit Profile", edit_user_path(user) %></td> 
            <% end %>
            <td>Joined <%= time_ago_in_words(user.created_at) %> ago.</td> 
        </tr>
        <%end%>
    </tbody>
</table>