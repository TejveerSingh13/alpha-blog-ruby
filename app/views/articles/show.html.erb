<h1>Showing article details</h1>
<p><strong>Title: </strong><%= @article.title %></p>
<p><strong>By: </strong><%= @article.user.username %></p>
<%= link_to gravatar_for(@article.user), user_path(@article.user) %>
<p><strong>Description: </strong><%= @article.description %></p>
<p>
    <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
        <%= link_to "Edit", edit_article_path(@article) %> |  
        <td><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></td> | 
    <% end %>
    <%= link_to "Return to Articles List", articles_path %>
</p>